{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Curation",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "integer"
        },
        "bud_id": {
            "title": "Bud ID",
            "type": "integer"
        },
        "source": {
            "title": "Source",
            "$ref": "source.json"
        },
	"dbentity_id": {
	    "title": "DBENTITY ID",
            "type": "integer"
	},
	"locus_id": {
            "title": "LOCUS ID",
            "type": "integer"
        },
	"subclass": {
            "title": "Subclass",
            "type": "string"
        },
	"curation_task": {
	    "title": "Curation Task",
	    "type": "string"
	},
	"curator_comment": {
            "title": "Curator Comment",
            "type": "string"
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "created_by": {
            "title": "Name",
            "type": "string"
        }
    }, 
    "required": ["source", "dbentity_id", "subclass", "curation_task"]
}