{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Source",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "display_name": {
            "type": "string"
        },
        "format_name": {
            "type": "string"
        },
        "link": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "bud_id": {
            "type": "integer"
        },
        "date_created": {
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "created_by": {
            "type": "string"
        }
    },
    "required": ["display_name"]
}