{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Contig Note Annotation",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "integer"
        },
        "contig_id": {
            "title": "CONTIG ID",
            "type": "integer"
        },
        "taxonomy_id": {
            "title": "TAXONOMY ID",
            "type": "integer"
        },
	"reference_id": {
            "title": "REFERENCE ID",
            "type": "integer"
        },
	"bud_id": {
            "title": "BUD ID",
            "type": "integer"
        },
        "note_type": {
            "title": "Note Type",
            "type": "string"
        },
	"display_name": {
            "title": "Display Name",
            "type": "string"
        },
        "note": {
            "title": "note",
            "type": "string"
        },
        "source": {
            "title": "Source",
            "$ref": "source.json"
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "created_by": {
            "title": "Name",
            "type": "string"
        }
    },
    "required": ["contig_id", "taxonomy_id", "note", "note_type", "display_name"]
}