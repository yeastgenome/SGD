{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Keyword",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "title": "ID"
        },
        "display_name": {
            "type": "string",
            "title": "Name"
        },
        "format_name": {
            "type": "string",
            "title": "Format Name"
        },
        "link": {
            "type": "string",
            "title": "Link"
        },
        "description": {
            "type": "string",
            "title": "Description"
        },
        "source": { "$ref": "source.json" },
        "bud_id": {
            "type": "integer",
            "title": "Bud ID"
        },
        "date_created": {
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "title": "Date Created"
        },
        "created_by": {
            "type": "string",
            "title": "Created By"
        }
    },
    "required": ["display_name", "source"]
}