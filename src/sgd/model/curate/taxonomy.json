{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Taxonomy",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "link": {
            "title": "Link",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "common_name": {
            "title": "Common Name",
            "type": "string"
        },
        "rank": {
            "title": "Rank",
            "type": "string"
        },
        "bud_id": {
            "title": "Bud ID",
            "type": "integer"
        },
        "ncbi_taxon_id": {
            "title": "NCBI Taxon ID",
            "type": "integer"
        },
        "source": {
            "title": "Source",
            "$ref": "source.json"
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "created_by": {
            "title": "Name",
            "type": "string"
        },
        "children": {
            "title": "Children",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "type": "string"
                    },
                    "relation_type": {
                        "title": "Relation Type",
                        "type": "string"
                    },
                    "source": {
                        "title": "Source",
                        "$ref": "source.json"
                    },
                    "date_created": {
                        "title": "Date Created",
                        "type": "string",
                        "anyOf": [
                            {
                                "format": "date-time"
                            },
                            {
                                "format": "date"
                            }
                        ]
                    },
                    "created_by": {
                        "title": "Created By",
                        "type": "string"
                    }
                },
                "required": ["name"]
            }
        },
        "parents": {
            "title": "Parents",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "type": "string"
                    },
                    "relation_type": {
                        "title": "Relation Type",
                        "type": "string"
                    },
                    "source": {
                        "title": "Source",
                        "$ref": "source.json"
                    },
                    "date_created": {
                        "title": "Date Created",
                        "type": "string",
                        "anyOf": [
                            {
                                "format": "date-time"
                            },
                            {
                                "format": "date"
                            }
                        ]
                    },
                    "created_by": {
                        "title": "Created By",
                        "type": "string"
                    }
                },
                "required": ["name"]
            }
        },
        "aliases": {
            "title": "Aliases",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "type": "string"
                    },
                    "link": {
                        "title": "Link",
                        "type": "string"
                    },
                    "alias_type": {
                        "title": "Alias Type",
                        "type": "string"
                    },
                    "source": {
                        "title": "Source",
                        "$ref": "source.json"
                    },
                    "date_created": {
                        "title": "Date Created",
                        "type": "string",
                        "anyOf": [
                            {
                                "format": "date-time"
                            },
                            {
                                "format": "date"
                            }
                        ]
                    },
                    "created_by": {
                        "title": "Created By",
                        "type": "string"
                    }
                },
                "required": ["name", "alias_type", "source"]
            }
        }
    },
    "required": ["name", "ncbi_taxon_id"]
}