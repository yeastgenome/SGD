{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Source",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "link": {
            "title": "Link",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "bud_id": {
            "title": "Bud ID",
            "type": "integer"
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "created_by": {
            "title": "Name",
            "type": "string"
        }
    },
    "required": ["name"]
}