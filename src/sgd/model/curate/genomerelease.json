{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Genomerelease",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "link": {
            "title": "Link",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "bud_id": {
            "title": "Bud ID",
            "type": "integer"
        },
        "source": {
            "title": "Source",
            "$ref": "source.json"
        },
        "genome_release": {
            "title": "Genome Release",
            "type": "string"
        },
        "sequence_release": {
            "title": "Sequence Release",
            "type": "number"
        },
        "annotation_release": {
            "title": "Annotation Release",
            "type": "number"
        },
        "curation_release": {
            "title": "Curation Release",
            "type": "number"
        },
        "filename": {
            "title": "Filename",
            "type": "string"
        },
        "release_date": {
            "title": "Release Date",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                }
            ]
        },
        "created_by": {
            "title": "Created By",
            "type": "string"
        }
    },
    "required": ["genome_release"]
}