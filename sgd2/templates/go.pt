<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<br></br>
		<h1><span tal:content="biocon.name"></h1>
		<p class="lead">
			<span tal:content="biocon.description">
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="biocon.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#ontology"><i class="icon-chevron-right"></i> Ontology</a></li>
			<li><a href="#genes"><i class="icon-chevron-right"></i> Genes</a></li>
			<li><a href="#evidence"><i class="icon-chevron-right"></i> Evidence</a></li>
			<li><a href="#reference"><i class="icon-chevron-right"></i> Reference</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
				<li><strong>GO ID: </strong><span tal:content="biocon.go_go_id"></li>
				<li><strong>Namespace: </strong><span tal:content="biocon.go_aspect"></li>
			</ul>
		</div>
	</div>
</section>

<!-- Ontology
================================================== -->
<section id="ontology">
	<div class="page-header">
		<h1>Ontology</h1>
			<label class="checkbox">
      			<input id="ancestor_check" type="checkbox" checked="true" name="categories"> Show Ancestors
    		</label>
    		<label class="checkbox">
      			<input id="child_check" type="checkbox" checked="true" name="categories"> Show Children
    		</label>
    		<!--
    		<label class="checkbox">
      			<input id="no_genes" type="checkbox" checked="true" name="categories"> Show Terms With No Genes
    		</label>
    		
    		<label class="radio">
      			<input id="tree_layout" type="radio" name="layout"> Tree Layout
    		</label>
    		<label class="radio">
      			<input id="fd_layout" type="radio" name="layout"> Force Directed Layout
    		</label>
    		-->
    		
		<div id="cytoscapeweb">
            Cytoscape visualization is loading...
        </div>
    </div>
</section>

<!-- Genes
================================================== -->
<section id="genes">
	<div class="page-header">
		<h1>Genes with GO Term <span id='genes_header'></span></h1> 

		<span id='genes_message'></span>
		<div id='genes_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='genes_table' width="100%">
			<thead>
  			<tr>
    			<th>Bioconcept</th>
    			<th>Gene</th>
    			<th>Gene Description</th>
    			<th>Evidence Codes</th>
  			</tr>
  			</thead>
			</table>
        </div>
	</div>
</section>

<!-- Evidence
================================================== -->
<section id="evidence">
	<div class="page-header">
		<h1>Evidence Associated with GO Term <span id='evidence_header'></span></h1> 

		<span id='evidence_message'></span>
		<div id='evidence_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='evidence_table' width="100%">
			<thead>
  			<tr>
  				<th>Bioconcept</th>
  				<th>Gene</th>
    			<th>GO Evidence</th>
    			<th>Annotation Type</th>
    			<th>Qualifier</th>
    			<th>Source</th>
    			<th>Reference</th>
  			</tr>
  			</thead>
			</table>
        </div>
	</div>
</section>

<!-- References
================================================== -->
<section id="reference">
	<div class="page-header">
		<h1>References</h1>
		<ul id='reference_list'>
		</ul>
	</div>
</section>

<script>
	$(document).ready(function() {
		//Set up gene table
		var options = basic_datatable_options("genes_header", 
				'${link_maker.go_filename}', "genes_wrapper", "genes_message");
		options["aaSorting"] = [[1, "asc"]];
		options["aoColumns"] = [{"bSearchable":false, "bVisible":false}, null, null, null]
		options["bProcessing"] = true;
		options["sAjaxSource"] = '${link_maker.go_overview_table_link}';
		options["bPaginate"] = true;
  		$('#genes_table').dataTable(options);	
  		
  		//Set up evidence table and reference list
  		$.getJSON('${link_maker.go_evidence_table_link}', function(data) {
  			var evidence_table = data['aaData'];
			var references = data['reference'];
  			
  			//Set up evidence table
			var options = basic_datatable_options("evidence_header", 
				'${link_maker.go_evidence_filename}', "evidence_wrapper", "evidence_message");
			options["aaSorting"] = [[1, "asc"]];
			options["aoColumns"] = [{"bSearchable":false, "bVisible":false}, null, null, null, null, null, null]
			options["aaData"] = evidence_table;
			options["bPaginate"] = true;

			$('#evidence_table').dataTable(options);
			
			//Set up references
			ref_list = document.getElementById("reference_list");
			for (var i=0; i < references.length; i++) {
				var citation = references[i];
				var p=document.createElement('p');
				p.innerHTML = citation;
				ref_list.appendChild(p);
			}
  		});
	} );
</script>

<script type="text/javascript">
window.onload=function() {
	setup_go_ontology_cytoscape_vis("${link_maker.go_ontology_graph_link}");   
};           
</script>
        
<style>
	/* The Cytoscape Web container must have its dimensions set. */
	html, body { height: 80%; width: 100%; padding: 0; margin: 0; }
	#cytoscapeweb { width: 100%; height: 100%; }
</style>

</div>

</body>
</div>
</div>

