<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="bioent_biocon.basic_info.name"></h1>
		<p class="lead">
			<span tal:content="bioent_biocon.basic_info.description"></span>
		</p>
	</div>
</header>


<div class="container">

<!-- Docs nav
================================================== -->
<div class="row">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="bioent_biocon.basic_info.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#evidence"><i class="icon-chevron-right"></i> Evidence</a></li>
          	<li><a href="#literature"><i class="icon-chevron-right"></i> References</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
				<li><strong>Bioentity: </strong><a tal:attributes="href bioent_biocon.bioent.link" tal:content="bioent_biocon.bioent.full_name"></a></li>
				<li><strong>Bioconcept: </strong><a tal:condition="python: bioent_biocon.biocon" tal:attributes="href bioent_biocon.biocon.link" tal:content="bioent_biocon.biocon.name"></a></li>
			</ul>
		</div>
	</div>
</section>

<!-- Evidence
================================================== -->
<section id="evidence">
	<div class="page-header">
		<h1>Evidence <span id='evidence_header'></span></h1>

		<div>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='evidence_table'>
			<thead>
  			<tr>
  				<th>Relationship</th>
    			<th>Qualifier</th>
    			<th>Experiment</th>
    			<th>Mutant</th>
    			<th>Allele</th>
    			<th>Strain</th>
    			<th>Reference</th>
  			</tr>
  			</thead>
			</table>
        </div>

	</div>
</section>

<!-- References
================================================== -->
<section id="literature">
	<div class="page-header">
		<h1>References</h1>
		<ul id='reference_list'>
		</ul>
	</div>
</section>

<tal:block tal:define="evidence_link bioent_biocon.evidence_link">
<script>
	$(document).ready(function() {
  		$('#evidence_table').dataTable( {
    		"sPaginationType": "bootstrap",
    		"aaSorting": [[0, "asc"], [1, "asc"]],
    		"sAjaxSource": '${evidence_link}',
    		"fnInitComplete": function() {
    			this.fnAdjustColumnSizing(true);
				if('${bioent_biocon['basic_info']['all']}' == 0) {
					this.fnSetColumnVis(0, false);
    			}     			
    			var num_rows = this.fnSettings().fnRecordsTotal();
    			document.getElementById("evidence_header").innerHTML = '(' + num_rows + ')';
    		}
  		} );
  		
  		
	} );
</script>
</tal:block>

<tal:block tal:define="references_link bioent_biocon.references_link">
<script>
$(document).ready(function() {
  	$.getJSON('${references_link}', function(data) {  		

  		ref_list = document.getElementById("reference_list");
  		
		for (var i=0; i < data.length; i++) {
			var reference = data[i];
			var p=document.createElement('p');
			p.innerHTML = reference['citation'];
			ref_list.appendChild(p);
		}
  	});
} );
</script>
</tal:block>

</div>

</body>
</div>
</div>

