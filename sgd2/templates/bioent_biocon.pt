<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>
	


<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container" tal:condition="python: bioent_biocon.type == 'BIOENT_BIOCON'">
		<h1><span tal:content="bioent_biocon.name"></h1>
		<p class="lead">
			<span tal:content="bioent_biocon.description"></span>
		</p>
	</div>
	
	<div class="container" tal:condition="python: bioent_biocon.type == 'BIOENTITY'">
		<h1><span tal:content="bioent_biocon.name + ' Phenotypes'"></h1>
		<p class="lead">
			<span tal:content="'Evidence for all phenotypes associated with ' + bioent_biocon.name + '.'"></span>
		</p>
	</div>
</header>

<div class="container-fluid">


<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav" id='navbar' name='navbar' style="margin-left:auto; margin-right:auto">
			<li><h4><span tal:content="bioent_biocon.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#evidence"><i class="icon-chevron-right"></i> Evidence</a></li>
          	<li><a href="#literature"><i class="icon-chevron-right"></i> References</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled' tal:condition="python: bioent_biocon.type == 'BIOENT_BIOCON'">
				<li><strong>Bioentity: </strong><span tal:content="structure bioent_biocon.bioentity.full_name_with_link"></span></li>
				<li><strong>Bioconcept: </strong>
				<a tal:content="structure bioent_biocon.bioconcept.name_with_link"></a>
				</li>
			</ul>
			<ul class='unstyled' tal:condition="python: bioent_biocon.type == 'BIOENTITY'">
				<li><strong>Bioentity: </strong><span tal:content="structure bioent_biocon.full_name_with_link"></span></li>
				<li><strong>Bioconcept: </strong><span>All</span>
				</li>
			</ul>
		</div>
	</div>
</section>

<!-- Evidence
================================================== -->
<section id="evidence">
	<div class="page-header">
		<h1>Evidence <span id='evidence_header'></span></h1>

		<span id='evidence_message' class="hide">No evidence for this relationship.</span>
		<div id='evidence_wrapper'>		
			<table class='table table-striped table-bordered table-condensed tablesorter' id='evidence_table' width="100%">
			<thead>
  			<tr tal:condition="python: biocon_type == 'PHENOTYPE'">
  				<th>Relationship</th>
    			<th>Qualifier</th>
    			<th>Experiment</th>
    			<th>Mutant</th>
    			<th>Allele</th>
    			<th>Reporter</th>
    			<th>Chemical</th>
    			<th>Strain</th>
    			<th>Reference</th>
  			</tr>
  			
  			<tr tal:condition="python: biocon_type == 'GO'">
  				<th>Relationship</th>
    			<th>GO Evidence</th>
    			<th>Annotation Type</th>
    			<th>Source</th>
    			<th>Date Last Reviewed</th>
    			<th>Qualifier</th>
    			<th>Strain</th>
    			<th>Reference</th>
  			</tr>
  			</thead>
			</table>
        </div>

	</div>
</section>

<!-- References
================================================== -->
<section id="literature">
	<div class="page-header">
		<h1>References</h1>
		<ul id='reference_list'>
		</ul>
	</div>
</section>

<script>
	$(document).ready(function() {
		//Get evidence data
		var link;
		var hide_first;
		if('${bioent_biocon.type}' == 'BIOENT_BIOCON') {
			hide_first = true;
		}
		else {
			hide_first = false
		}
  		$.getJSON('${evidence_link}', function(data) {
  			var evidence_table = data['evidence'];
			var references = data['reference'];
  			
  			//Set up evidence table
			var options = basic_datatable_options("evidence_header", 
				'${bioent_biocon.name}_evidence', "evidence_wrapper", "evidence_message");
			options["fnInitComplete"] = function() {
				if(hide_first) {
					this.fnSetColumnVis(0, false);
    			}  
    			var num_rows = this.fnSettings().fnRecordsTotal();
				document.getElementById("evidence_header").innerHTML = '(' + num_rows + ')';
			};
			options["aaData"] = evidence_table;
			$('#evidence_table').dataTable(options);
			
			//Set up references
			ref_list = document.getElementById("reference_list");
			for (var i=0; i < references.length; i++) {
				var citation = references[i];
				var p=document.createElement('p');
				p.innerHTML = citation;
				ref_list.appendChild(p);
			}
  		});
	} );
</script>

</div>

</body>
</div>
</div>

