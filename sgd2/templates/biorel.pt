<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container" tal:condition="python: biorel.type == 'BIORELATION'">
		<h1><span tal:content="biorel.name"></h1>
		<p class="lead">
			<span tal:content="biorel.description"></span>
		</p>
	</div>
	
	<div class="container" tal:condition="python: biorel.type == 'BIOENTITY' and biorel_type == 'INTERACTION'">
		<h1><span tal:content="biorel.name + ' Interaction'"></h1>
		<p class="lead">
			<span tal:content="'Evidence for all interactions associated with ' + biorel.name + '.'"></span>
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h3><span tal:content="biorel.name"></h3></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#genetic_evidence"><i class="icon-chevron-right"></i> Genetic Evidence</a></li>
			<li><a href="#physical_evidence"><i class="icon-chevron-right"></i> Physical Evidence</a></li>
          	<li><a href="#literature"><i class="icon-chevron-right"></i> References</a></li>

		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<dl tal:condition="python: biorel.type == 'BIORELATION'">
				<dt>Interacting Bioentities:</dt>
				<span tal:content="structure biorel.source_bioent.full_name_with_link"></span>
				<dd tal:content="biorel.source_bioent.description"></dd>
				<span tal:content="structure biorel.sink_bioent.full_name_with_link"></span>
				<dd tal:content="biorel.sink_bioent.description"></dd>

			</dl>
			<dl tal:condition="python: biorel.type == 'BIOENTITY' and biorel_type == 'INTERACTION'">
				<dt>Interacting Bioentity:</dt>
				<span tal:content="structure biorel.full_name_with_link"></span>
				<dd tal:content="biorel.description"></dd>

			</dl>
		</div>
	</div>
</section>

<!-- Genetic Evidence
================================================== -->
<section id="genetic_evidence">
	<div class="page-header">
		<h1>Genetic Evidence <span id='genetic_evidence_header'></h1>

		<span id='genetic_evidence_message'></span>
		<div id='genetic_evidence_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='genetic_evidence_table' width="100%">
			<thead>
  			<tr>
  				<th>Interactor</th>
    			<th>Experiment</th>
    			<th>Annotation</th>
    			<th>Direction</th>
    			<th>Phenotype</th>
    			<th>Reference</th>
  			</tr>
  			</thead>
			</table>
        </div>
		
	</div>
</section>

<!-- Physical Evidence
================================================== -->
<section id="physical_evidence">
	<div class="page-header">
		<h1>Physical Evidence <span id='physical_evidence_header'></h1>

		<span id='physical_evidence_message'></span>
		<div id='physical_evidence_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='physical_evidence_table' width="100%">
			<thead>
  			<tr>
  				<th>Interactor</th>
    			<th>Experiment</th>
    			<th>Annotation</th>
    			<th>Direction</th>
    			<th>Modification</th>
    			<th>Reference</th>
  			</tr>
  			</thead>
			</table>
        </div>
		
	</div>
</section>

<!-- References
================================================== -->
<section id="literature">
	<div class="page-header">
		<h1>References</h1>
		<ul id='reference_list'>
		</ul>
	</div>
</section>

<script>
	$(document).ready(function() {
		$.getJSON('${evidence_link}', function(data) {
  			var genetic_evidence_table = data['genetic_evidence'];
  			var physical_evidence_table = data['physical_evidence'];
			var references = data['reference'];
  			
			//Set up genetic evidence table
			var options = basic_datatable_options("genetic_evidence_header", 
				'${biorel.name}_genetic_evidence', "genetic_evidence_wrapper", "genetic_evidence_message");
			options["fnInitComplete"] = function() {
				if('${biorel.type}' == "BIORELATION") {
					this.fnSetColumnVis(0, false);
    			}  
    			var num_rows = this.fnSettings().fnRecordsTotal();
				document.getElementById("genetic_evidence_header").innerHTML = '(' + num_rows + ')';
				if(num_rows == 0) {
    			 	document.getElementById("genetic_evidence_message").innerHTML = 'No evidence of a genetic interaction.';
    			 	document.getElementById("genetic_evidence_wrapper").style.display = 'none';
    			}
			};
			options["aaData"] = genetic_evidence_table;
  			$('#genetic_evidence_table').dataTable(options);
  			
  			//Set up physical evidence data
			var options = basic_datatable_options("physical_evidence_header", 
				'${biorel.name}_physical_evidence', "physical_evidence_wrapper", "physical_evidence_message");
			options["fnInitComplete"] = function() {
				if('${biorel.type}' == "BIORELATION") {
					this.fnSetColumnVis(0, false);
    			}  
    			var num_rows = this.fnSettings().fnRecordsTotal();
				document.getElementById("physical_evidence_header").innerHTML = '(' + num_rows + ')';
				if(num_rows == 0) {
    			 	document.getElementById("physical_evidence_message").innerHTML = 'No evidence of a physical interaction.';
    			 	document.getElementById("physical_evidence_wrapper").style.display = 'none';
    			}
			};
			options["aaData"] = physical_evidence_table;
  			$('#physical_evidence_table').dataTable(options);
			
			//Set up references
			ref_list = document.getElementById("reference_list");
			for (var i=0; i < references.length; i++) {
				var citation = references[i];
				var p=document.createElement('p');
				p.innerHTML = citation;
				ref_list.appendChild(p);
			}  			
  			
  		});
	} );
</script>


</div>

</body>
</div>
</div>

