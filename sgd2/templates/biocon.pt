<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="biocon.basic_info.name"></h1>
		<p class="lead">
			<span tal:content="biocon.basic_info.description">
		</p>
	</div>
</header>


<div class="container">

<!-- Docs nav
================================================== -->
<div class="row">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="biocon.basic_info.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#genes"><i class="icon-chevron-right"></i> Genes</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
			</ul>
		</div>
	</div>
</section>

<!-- Genes
================================================== -->
<section id="genes">
	<div class="page-header">
		<h1>Genes (<span tal:content="biocon.bioent_biocon_count">)</h1>

		<div>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='myTable'>
			<thead>
  			<tr>
    			<th>BioentBiocon</th>
    			<th>Gene</th>
    			<th>Evidence Count</th>
  			</tr>
  			</thead>
  			<tbody>
  			<tr tal:repeat="bioent_biocon biocon.bioent_biocons">
  				<td><a tal:attributes="href bioent_biocon.link" tal:content="bioent_biocon.name"></a></td>			
  				<td><a tal:attributes="href bioent_biocon.bioent.link" tal:content="bioent_biocon.bioent.name"></a></td>			
    			<td><span tal:content="bioent_biocon.evidence_count"></span> <span class="muted" style="float:right" tal:condition="python: bioent_biocon.evidence_desc" tal:content="'(' + bioent_biocon.evidence_desc + ')'"></span></td>
  			</tr>
  			</tbody>
			</table>
        </div>
		
	</div>
</section>

<script>
	$(document).ready(function() {
    $('#myTable').dataTable( {
    "sPaginationType": "bootstrap",
    "aaSorting": [[2, "desc"]]
  } );
} );
</script>

</div>

</body>
</div>
</div>

