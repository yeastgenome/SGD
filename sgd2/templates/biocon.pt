<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="biocon.name"></h1>
		<p class="lead">
			<span tal:content="biocon.description">
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="biocon.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#genes"><i class="icon-chevron-right"></i> Genes</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
			</ul>
		</div>
	</div>
</section>

<!-- Genes
================================================== -->
<section id="genes">
	<div class="page-header">
		<h1 tal:condition="python: biocon.biocon_type == 'PHENOTYPE'">Genes with Phenotype <span id='genes_header'></span></h1> 
		<h1 tal:condition="python: biocon.biocon_type == 'GO'">Genes with GO Term <span id='genes_header'></span></h1> 

		<span id='genes_message'></span>
		<div id='genes_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='genes_table' width="100%">
			<thead>
  			<tr>
    			<th>Gene</th>
    			<th>Evidence Count</th>
  			</tr>
  			</thead>
			</table>
        </div>
		
	</div>
</section>

<script>
	$(document).ready(function() {
		$.getJSON('${biocon.all_bioent_link}', function(data) {
  			var bioents = data['bioent'];
  			
			//Set up gene table
			var options = basic_datatable_options("genes_header", 
				'${biocon.name}_genes', "genes_wrapper", "genes_message");
			options["aaSorting"] = [[1, "desc"]];
			options["aoColumns"] = [null, {"sType":"num-html"}];
			options["aaData"] = bioents;
  			$('#genes_table').dataTable(options);	
  			
  		});
	} );
</script>

</div>

</body>
</div>
</div>

