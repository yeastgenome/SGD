<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="biocon.basic_info.name"></h1>
		<p class="lead">
			<span tal:content="biocon.basic_info.description">
		</p>
	</div>
</header>


<div class="container">

<!-- Docs nav
================================================== -->
<div class="row">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h4><span tal:content="biocon.basic_info.name"></h4></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#genes"><i class="icon-chevron-right"></i> Genes</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
			</ul>
		</div>
	</div>
</section>

<!-- Genes
================================================== -->
<section id="genes">
	<div class="page-header">
		<h1>Genes <span id='genes_header'></span></h1> 

		<div>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='genes_table'>
			<thead>
  			<tr>
    			<th>Relationship</th>
    			<th>Evidence Count</th>
  			</tr>
  			</thead>
			</table>
        </div>
		
	</div>
</section>

<tal:block tal:define="genes_link biocon.genes_link">
<script>
	$(document).ready(function() {
		$('#genes_table').dataTable( {
    		"sPaginationType": "bootstrap",
    		"aaSorting": [[1, "desc"]],
    		"sAjaxSource": '${genes_link}',
    		"fnInitComplete": function() {
    			this.fnAdjustColumnSizing(true);
    			var num_rows = this.fnSettings().fnRecordsTotal()
    			document.getElementById("genes_header").innerHTML = '(' + num_rows + ')'
    		}
  		} );
	} );
</script>
</tal:block>

</div>

</body>
</div>
</div>

