<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="allele.name"></h1>
		<p class="lead">
			<span tal:content="allele.description">
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div id='sidebar' class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h3><span tal:content="allele.name"></h3></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
				<li tal:condition="python: allele.parent"><strong>Gene: </strong><a tal:attributes="href allele.parent.link" tal:content="allele.parent.full_name"></a></li>
				<li><strong>Description: </strong><span tal:content="allele.more_info"></span></li>
			</ul>
		</div>
	</div>
</section>

</div>

</body>
</div>
</div>

