<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="ref.basic_info.name"></h1>
		<p class="lead">
			<span tal:content="ref.basic_info.description">
		</p>
	</div>
</header>


<div class="container">

<!-- Docs nav
================================================== -->
<div class="row">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h3><span tal:content="ref.basic_info.name"></h3></li>
			<li><a href="#summary"><i class="icon-chevron-right"></i> Summary</a></li>
			<li><a href="#abstract"><i class="icon-chevron-right"></i> Abstract</a></li>
			<li><a href="#interactions"><i class="icon-chevron-right"></i> Interactions</a></li>
			<li><a href="#bioentity-phenotypes"><i class="icon-chevron-right"></i> Bioentity-Phenotypes</a></li>

		</ul>
	</div>
	
	<div class="span9">  

<!-- Summary
================================================== -->
<section id="summary">
	<div class="page-header">
		<h1>Summary</h1>
		<div>
			<ul class='unstyled'>
				<li tal:condition="python: ref.basic_info.citation"><strong>Citation: </strong><span tal:content="ref.basic_info.citation"></li>
				<br>
				<li tal:condition="python: ref.basic_info.book"><strong>Book: </strong><span tal:content="ref.basic_info.book"></li>
				<li tal:condition="python: ref.basic_info.journal"><strong>Journal: </strong><span tal:content="ref.basic_info.journal"></li>
				<li tal:condition="python: ref.basic_info.volume"><strong>Volume: </strong><span tal:content="ref.basic_info.volume"></li>
				<li tal:condition="python: ref.basic_info.issue"><strong>Issue: </strong><span tal:content="ref.basic_info.issue"></li>
				<li tal:condition="python: ref.basic_info.page"><strong>Page: </strong><span tal:content="ref.basic_info.page"></li>
				<li tal:condition="python: ref.basic_info.doi"><strong>DOI: </strong><span tal:content="ref.basic_info.doi"></li>
				<li tal:condition="python: ref.basic_info.date_published"><strong>Published: </strong><span tal:content="ref.basic_info.date_published"></li>
				<li tal:condition="python: ref.basic_info.date_revised"><strong>Revised: </strong><span tal:content="ref.basic_info.date_revised"></li>
				
				<!-- 
				<li tal:condition="python: ref.basic_info.source"><strong>Source: </strong><span tal:content="ref.basic_info.source"></li>
				<li tal:condition="python: ref.basic_info.status"><strong>Status: </strong><span tal:content="ref.basic_info.status"></li>
				<li tal:condition="python: ref.basic_info.pdf_status"><strong>PDF-Status: </strong><span tal:content="ref.basic_info.pdf_status"></li>
				<li tal:condition="python: ref.basic_info.year"><strong>Year: </strong><span tal:content="ref.basic_info.year"></li>
				-->
			</ul>
		</div>
	</div>
</section>

<!-- Abstract
================================================== -->
<section id="abstract">
	<div class="page-header">
		<h1>Abstract</h1>
		<div>
			<p tal:content="ref['basic_info']['abstract']"></p>
		</div>
	</div>
</section>

<!-- Interactions
================================================== -->
<section id="interactions">
	<div class="page-header">
		<h1>Interactions (<span tal:content="ref.interaction_evidence_count">)</h1>

		
		<!-- Brief
		========================================== -->
		<div>
			<span tal:condition="python: ref.interaction_evidence_count == 0">No interaction information was pulled from this paper.</span>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='phenotype_table' tal:condition="python: ref.interaction_evidence_count > 0">
			<thead>
  			<tr>
  				<th>Evidence</th>
    			<th>Interaction</th>
  			</tr>
  			</thead>
  			<tbody>
  			<tr tal:repeat="evidence ref.interaction_evidences">
    			<td><a tal:attributes="href evidence.basic_info.link" tal:content="evidence.basic_info.name"></a></td>			
    			<td><a tal:attributes="href evidence.biorel.link" tal:content="evidence.biorel.name"></a></td>					
  			</tr>
  			</tbody>
			</table>
		</div>
	</div>
</section>

<!-- Phenotypes
================================================== -->
<section id="bioentity-phenotypes">
	<div class="page-header">
		<h1>Bioentity-Phenotypes (<span tal:content="ref.phenotype_evidence_count">)</h1>

		
		<!-- Brief
		========================================== -->
		<div>
			<span tal:condition="python: ref.phenotype_evidence_count == 0">No phenotype information was pulled from this paper.</span>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='phenotype_table' tal:condition="python: ref.phenotype_evidence_count > 0">
			<thead>
  			<tr>
  				<th>Evidence</th>
    			<th>Bioentity-Phenotype</th>
  			</tr>
  			</thead>
  			<tbody>
  			<tr tal:repeat="evidence ref.phenotype_evidences">
    			<td><a tal:attributes="href evidence.basic_info.link" tal:content="evidence.basic_info.name"></a></td>			
    			<td><a tal:attributes="href evidence.bioent_biocon.link" tal:content="evidence.bioent_biocon.name"></a></td>					
  			</tr>
  			</tbody>
			</table>
		</div>
	</div>
</section>

</div>

</body>
</div>
</div>

