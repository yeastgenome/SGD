<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h2><span tal:content="ref.citation_db"></h2>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h3><span tal:content="ref.author_year"></h3></li>
			<li><a href="#abstract"><i class="icon-chevron-right"></i> Abstract</a></li>
			<li><a href="#go"><i class="icon-chevron-right"></i> GO</a></li>
			<li><a href="#phenotypes"><i class="icon-chevron-right"></i> Phenotypes</a></li>
			<li><a href="#interactions"><i class="icon-chevron-right"></i> Interactions</a></li>

		</ul>
	</div>
	
	<div class="span9">  

<!-- Abstract
================================================== -->
<section id="abstract">
	<div class="page-header">
		<h1>Abstract</h1>
		<div>
			<p tal:condition="python: ref.abstract" tal:content="structure ref.abstract"></p>
			<p tal:condition="python: ref.pubmed_id">PMID: <span tal:content="ref.pubmed_id"></span></p>
			<p tal:condition="python: ref.doi">DOI: <span tal:content="ref.doi"></span></p>
			
		</div>
	</div>
</section>

<!-- GO
================================================== -->
<section id="go">
	<div class="page-header">
		<h1>Gene Ontology <span id='go_header'></h1>
		<p id='go_message' style="display:none;">No gene ontology information curated from this reference.</p>

		<div id='go_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='go_table' width="100%">
			<thead>
  			<tr>
    			<th>GO Term</th>
    			<th>Gene</th>
    			<th>Evidence From This Reference</th>
  			</tr>
  			</thead>
			</table>
		</div>
	</div>
</section>

<!-- Phenotypes
================================================== -->
<section id="phenotypes">
	<div class="page-header">
		<h1>Phenotype <span id='phenotype_header'></h1>
		
		<!-- General Phenotypes
		========================================== -->
		<h3>Cellular Phenotype <span id='cellular_phenotype_header'></h3>
		<p id='phenotype_message' style="display:none;">No general phenotype information curated from this reference.</p>
		<div id='phenotype_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='phenotype_table' width="100%">
			<thead>
  			<tr>
    			<th>Phenotype</th>
    			<th>Gene</th>
    			<th>Evidence From This Reference</th>
  			</tr>
  			</thead>
			</table>
		</div>
		
		<!-- Chemical Phenotypes
		========================================== -->
		<h3>Chemical Phenotype <span id='chemical_phenotype_header'></h3>
		<p id='chemical_phenotype_message' style="display:none;">No chemical phenotype information curated from this reference.</p>
		<div id='chemical_phenotype_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='chemical_phenotype_table' width="100%">
			<thead>
  			<tr>
    			<th>Phenotype</th>
    			<th>Gene</th>
  				<th>Chemical</th>
    			<th>Evidence From This Reference</th>
  			</tr>
  			</thead>
			</table>
		</div>
		
		<!-- Protein Peptide and RNA Phenotypes
		========================================== -->
		<h3>Protein/Peptide and RNA Phenotype <span id='pp_rna_phenotype_header'></h3>
		<p id='pp_rna_phenotype_message' style="display:none;">No protein/peptide and RNA phenotype information curated from this reference.</p>
		<div id='pp_rna_phenotype_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='pp_rna_phenotype_table' width="100%">
			<thead>
  			<tr>
    			<th>Phenotype</th>
    			<th>Gene</th>
    			<th>Reporter</th>
    			<th>Evidence From This Reference</th>

  			</tr>
  			</thead>
			</table>
		</div>
	</div>
</section>

<!-- Interactions
================================================== -->
<section id="interactions">
	<div class="page-header">
		<h1>Interaction <span id='interaction_header'></h1>
		<p id='interaction_message' style="display:none;">No interaction information curated from this reference.</p>
		
		<!-- Brief
		========================================== -->
		<div id='interaction_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='interaction_table' width="100%">
			<thead>
  			<tr>
    			<th>Interactor 1</th>
    			<th>Interactor 2</th>
    			<th>Evidence From This Reference</th>
  			</tr>
  			</thead>
			</table>
		</div>
	</div>
</section>

<script>
$(document).ready(function() {
		//Set up go table
		var options = basic_datatable_options("go_header", '${ref.go_file_name}', "go_wrapper", "go_message");
		options["aaSorting"] = [[2, "desc"]];
		options["aoColumns"] = [null, null, {"sType":"num-html"}];
		options["bProcessing"] = true
		options["sAjaxSource"] = '${ref.go_link}';
		$('#go_table').dataTable(options);

  		//Set up interaction table
		var options = basic_datatable_options("interaction_header", '${ref.interaction_file_name}', "interaction_wrapper", "interaction_message");
		options["aaSorting"] = [[3, "desc"]];
		options["aoColumns"] = [null, null, {"sType":"num-html"}];
		options["bProcessing"] = true
		options["sAjaxSource"] = '${ref.interaction_link}';
		$('#interaction_table').dataTable(options);
			
  		//Get evidence data
  		$.getJSON('${ref.phenotype_link}', function(data) {
  			var phenotype_table = data['phenotype'];
  			var chemical_phenotype_table = data['chemical_phenotype'];
  			var pp_rna_phenotype_table = data['pp_rna_phenotype'];
			
			//Set total phenotype count
			var num_rows = phenotype_table.length + chemical_phenotype_table.length + pp_rna_phenotype_table.length;
			document.getElementById("phenotype_header").innerHTML = '(' + num_rows + ')';
			
  			//Set up phenotype table
			var options = basic_datatable_options("cellular_phenotype_header", '${ref.phenotype_file_name}', "phenotype_wrapper", "phenotype_message");
			options["aaSorting"] = [[2, "desc"]];
			options["aoColumns"] = [null, null, {"sType":"num-html"}];
			options["aaData"] = phenotype_table;
			$('#phenotype_table').dataTable(options);
		
			//Set up chemical phenotype table
			var options = basic_datatable_options("chemical_phenotype_header", '${ref.chemical_phenotype_file_name}', "chemical_phenotype_wrapper", "chemical_phenotype_message");
			options["aaSorting"] = [[3, "desc"]];
			options["aoColumns"] = [null, null, null, {"sType":"num-html"}];
			options["aaData"] = chemical_phenotype_table;
			$('#chemical_phenotype_table').dataTable(options);
		
			//Set up pp-rna phenotype table
			var options = basic_datatable_options("pp_rna_phenotype_header", '${ref.pp_rna_phenotype_file_name}', "pp_rna_phenotype_wrapper", "pp_rna_phenotype_message");
			options["aaSorting"] = [[3, "desc"]];
			options["aoColumns"] = [null, null, null, {"sType":"num-html"}];
			options["aaData"] = pp_rna_phenotype_table;
			$('#pp_rna_phenotype_table').dataTable(options);
			
  		});
	} );
</script>

</div>

</body>
</div>
</div>

