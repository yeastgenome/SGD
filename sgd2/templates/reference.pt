<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>

<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<h1><span tal:content="ref.basic_info.name"></h1>
		<p class="lead">
			<span tal:content="ref.basic_info.description">
		</p>
	</div>
</header>


<div class="container-fluid">

<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav affix-top" id='navbar' name='navbar'>
			<li><h3><span tal:content="ref.basic_info.name"></h3></li>
			<li><a href="#abstract"><i class="icon-chevron-right"></i> Abstract</a></li>
			<li><a href="#interactions"><i class="icon-chevron-right"></i> Interactions</a></li>
			<li><a href="#bioentity-phenotypes"><i class="icon-chevron-right"></i> Phenotypes</a></li>

		</ul>
	</div>
	
	<div class="span9">  

<!-- Abstract
================================================== -->
<section id="abstract">
	<div class="page-header">
		<h1>Abstract</h1>
		<div>
			<p tal:condition="python: ref.basic_info.abstract" tal:content="structure ref.basic_info.abstract"></p>
			<p>PMID: <span tal:content="ref.basic_info.pubmed_id"></span></p>
			<p tal:condition="python: ref.basic_info.doi">DOI: <span tal:content="ref.basic_info.doi"></span></p>
			
		</div>
	</div>
</section>

<!-- Interactions
================================================== -->
<section id="interactions">
	<div class="page-header">
		<h1>Interactions <span id='interactions_header'></h1>
		<p id='interactions_message'></p>
		
		<!-- Brief
		========================================== -->
		<div id='interactions_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='interactions_table' width="100%">
			<thead>
  			<tr>
    			<th>Interaction</th>
    			<th>Endpoint 1</th>
    			<th>Endpoint 2</th>
  			</tr>
  			</thead>
			</table>
		</div>
	</div>
</section>

<!-- Phenotypes
================================================== -->
<section id="bioentity-phenotypes">
	<div class="page-header">
		<h1>Phenotypes <span id='phenotypes_header'></h1>
		<p id='phenotypes_message'></p>
		
		<!-- Brief
		========================================== -->
		<div id='phenotypes_wrapper'>
			<table class='table table-striped table-bordered table-condensed tablesorter' id='phenotypes_table' width="100%">
			<thead>
  			<tr>
    			<th>Bioentity-Phenotype</th>
    			<th>Phenotype</th>
    			<th>Bioentity</th>

  			</tr>
  			</thead>
			</table>
		</div>
	</div>
</section>

<tal:block tal:define="phenotypes_link ref.phenotypes_link">
<script>
	$(document).ready(function() {
  		$('#phenotypes_table').dataTable( {
    		"sPaginationType": "bootstrap",
    		"aaSorting": [[0, "asc"]],
    		"sAjaxSource": '${phenotypes_link}',
    		"fnInitComplete": function() {
    			this.fnAdjustColumnSizing(true);
    			var num_rows = this.fnSettings().fnRecordsTotal();
    			document.getElementById("phenotypes_header").innerHTML = '(' + num_rows + ')';
    			if(num_rows == 0) {
    			 	document.getElementById("phenotypes_message").innerHTML = 'No phenotype information was pulled from this paper.';
    			 	document.getElementById("phenotypes_wrapper").style.display = 'none';
    			}
    		}
  		} );
	} );
</script>
</tal:block>

<tal:block tal:define="interactions_link ref.interactions_link">
<script>
$(document).ready(function() {
  	$('#interactions_table').dataTable( {
    	"sPaginationType": "bootstrap",
    	"aaSorting": [[0, "asc"]],
    	"sAjaxSource": '${interactions_link}',
    	"fnInitComplete": function() {
    		this.fnAdjustColumnSizing(true);
    		var num_rows = this.fnSettings().fnRecordsTotal();
    		document.getElementById("interactions_header").innerHTML = '(' + num_rows + ')';
    		if(num_rows == 0) {
    			 document.getElementById("interactions_message").innerHTML = 'No interaction information was pulled from this paper.';
    			 document.getElementById("interactions_wrapper").style.display = 'none';
    		}
    	}
  	} );
} );
</script>
</tal:block>

</div>

</body>
</div>
</div>

